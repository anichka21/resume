<div class="row">
    {{#each goodsList}}
    <div class="card col-5 m-4">
    <img src="{{img}}" class="card-img-top p-2">
    <div class="row p-2 m-2">
    <span class="col-2 badge text-bg-warning rounded-pill text-uppercase me-1">{{#if isHot}}HOT!{{/if}}</span>
    <span class="col-2 badge text-bg-primary rounded-pill text-uppercase">{{#if isNew}}NEW{{/if}}</span>
    <div class="mt-3 ps-0"><span class="col-6 badge text-bg-success text-uppercase">{{#if isFast}}Швидка доставка{{/if}}</span></div>
    <div class="mt-2 ps-0"><span class="col-8 badge text-bg-secondary text-uppercase">{{#if isFree}}Безкоштовна доставка{{/if}}</span></div>
    </div>
    <h5 class="p-3">{{name}}</h5>
    <div class="p-3 pt-0">
        {{#with review}}
        <div>{{amount}} {{text}}</div>
        {{/with}}
    </div>
    <h5 class="p-3 pt-0 pb-2"><big>{{price}}</big></h5>
    <div class="p-3 pt-0">{{delivery}}</div>
    <div class="p-3 pt-0">
        {{#each buttons}}
        <div>
            <button href="{{link}}" class="{{#if isPrimary}}btn btn-primary{{/if}}
            {{#if isSecondary}}btn btn-secondary{{/if}} m-1">{{text}}</button>
        </div>
        {{/each}}
    </div>
    <div class="p-3 pt-0">
        <ul>
            {{#each characteristics}}
            <li>{{title}}: {{value}}</li>
            {{/each}}
        </ul>
    </div>
    </div>
    {{/each}}
</div>